<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="amasty_dpanko_blacklist" resource="default" engine="innodb" comment="Blacklist SKU">
        <column xsi:type="int" name="sku_id" padding="10" unsigned="true" nullable="false" identity="true"
                comment="Sku ID"/>
        <column xsi:type="varchar" name="sku" length="255" nullable="false" comment="sku"/>
        <column xsi:type="int" name="qty" padding="10" unsigned="true" nullable="false" comment="qty"/>
        <constraint xsi:type="primary" referenceId="primary">
            <column name="sku_id"/>
        </constraint>
    </table>
</schema>